<div class="col-lg-12 mb-4">
  <%= link_to subscription_path(subscription), class: "text-decoration-none text-dark" do %>
    <div class="card shadow-sm border-light">
      <div class="card-body">
        <h5 class="card-title mb-3"><%= subscription.subscription_number %></h5>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= render "subscriptions/subscription_statuses", subscription: subscription %>
        </div>
        <p class="d-flex justify-content-between"><strong>Period:</strong> <%= subscription.start_date.strftime("%b %d, %Y") %> - <%= subscription.end_date.strftime("%b %d, %Y") %></p>
        <p class="d-flex justify-content-between"><strong>Auto Renew:</strong> <%= subscription.auto_renew ? "Yes" : "No" %></p>
        <p class="d-flex justify-content-between"><strong>Price:</strong> <%= number_to_currency(subscription.price) %></p>
      </div>
      <div class="card-footer bg-light">
        <small>Created at <%= subscription.created_at.strftime("%b %d, %Y") %></small>
      </div>
    </div>
  <% end %>
</div>