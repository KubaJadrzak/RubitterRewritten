<div class="col-lg-12 mb-4">
  <%= link_to espago_client_path(client), class: "card shadow-sm border-light text-decoration-none text-reset" do %>
    <div class="card-body">
      <h5 class="card-title mb-3"><%= client.client_number %></h5>
      <p><strong>Name:</strong> <%= [client.first_name, client.last_name].compact.join(" ").presence || "N/A" %></p>
      <p><strong>Company:</strong> <%= client.company.presence || "N/A" %></p>
      <p><strong>Card Last 4:</strong> <%= client.last4.presence || "N/A" %></p>
      <p><strong>Created at:</strong> <%= client.created_at.strftime("%b %d, %Y") %></p>
      <h5 class="card-title mb-3">
        <span class="badge <%= client_status_badge_class(client.status) %>">
          <%= client_status_label(client.status) %>
        </span>
        <% if client.status == 'MIT' %>
          <span class="badge bg-info text-dark">Auto-Renew</span>
        <% end %>
      </h5>
    </div>
  <% end %>
</div>