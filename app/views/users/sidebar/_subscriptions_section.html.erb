<div id="subscriptions-section" class="content-section" data-user-sidebar-target="subscriptionsSection">
  <h4>Your Subscriptions</h4>
  <% if @subscriptions.any? %>
    <div class="row mt-4">
      <%= render partial: "users/sidebar/subscription", collection: @subscriptions %>
    </div>
  <% else %>
    <p>You have no subscriptions yet.</p>
  <% end %>
</div>
