<div id="order-history-section" class="content-section d-none" data-user-sidebar-target="ordersSection">
  <h4>Your Orders</h4>
  <% if @orders.any? %>
    <div class="row mt-4">
      <% @orders.each do |order| %>
        <div class="col-lg-12 mb-4">
          <%= link_to order_path(order), class: "text-decoration-none text-dark" do %>
            <div class="card shadow-sm border-light">
              <div class="card-body">
                <h5 class="card-title mb-3"><%= order.order_number %></h5>
                <div class="row">
                  <div class="col-lg-6 d-flex justify-content-between align-items-center">
                    <strong>Status:</strong>
                    <span class="badge bg-secondary w-50 text-center"><%= order.status %></span>
                  </div>
                  <div class="col-lg-6 d-flex justify-content-between align-items-center">
                    <strong>Payment Status:</strong>
                    <span class="badge bg-secondary w-50 text-center"><%= order.payment_status.presence.capitalize %></span>
                  </div>
                </div>
              </div>
              <div class="card-footer bg-light">
                <h6><strong>Order Items:</strong></h6>
                <table class="table table-striped table-sm">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.order_items.each do |item| %>
                      <tr>
                        <td><%= item.product.title %></td>
                        <td>$<%= item.price_at_purchase %></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= item.total_price %></td>
                      </tr>
                    <% end %>
                    <tr>
                      <td><b>Total</b></td>
                      <td></td>
                      <td></td>
                      <td><b>$<%= order.total_price %></b></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You have no orders yet.</p>
  <% end %>
</div>
