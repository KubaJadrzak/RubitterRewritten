<div>
  <div class="row">
    <div class="col-lg-6 d-flex justify-content-between align-items-center">
      <strong>Status:</strong>
      <span class="badge <%= badge_class_for_status(order.status) %> w-50 text-center">
        <%= order.status %>
      </span>
    </div>
    <div class="col-lg-6 d-flex justify-content-between align-items-center">
      <strong>Payment Status:</strong>
      <span class="badge <%= badge_class_for_payment_status(order.payment_status) %> w-50 text-center">
        <%= order.payment_status.presence&.capitalize %>
      </span>
    </div>
  </div>
</div>
