<div class="container mt-4">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
    <h3><%= @order.order_number %></h3>
    <%= link_to "Back to Orders", account_path, class: "btn btn-primary mt-2 mt-md-0" %>
  </div>
  <div class="row mt-4">
    <div class="col-lg-12 mb-4">
      <div class="card shadow-sm border-light">
        <div class="card-body">
          <h5 class="card-title mb-3">Order Details</h5>
          <div class="row">
            <div class="col-lg-6 d-flex justify-content-between align-items-center">
              <strong>Status:</strong>
              <span class="badge bg-secondary w-50 text-center"><%= @order.status %></span>
            </div>
            <div class="col-lg-6 d-flex justify-content-between align-items-center">
              <strong>Payment Status:</strong>
              <span class="badge bg-secondary w-50 text-center"><%= @order.payment_status.presence%></span>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="d-flex justify-content-between">
                <span><strong>Shipping Address:</strong></span>
                <span><%= @order.shipping_address %></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex justify-content-between">
                <span><strong>Ordered At:</strong></span>
                <span><%= @order.ordered_at.strftime("%b %e, %Y %l:%M %p") %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light">
          <h6><strong>Order Items:</strong></h6>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.product.title %></td>
                  <td>$<%= order_item.price_at_purchase %></td>
                  <td><%= order_item.quantity %></td>
                  <td>$<%= order_item.total_price %></td>
                </tr>
              <% end %>
              <tr>
                <td><b>Total</b></td>
                <td></td>
                <td></td>
                <td><b>$<%= @order.total_price %></b></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
