<div class="container" style="max-width: 400px; margin: 40px auto; padding: 20px; box-shadow: 0 0 10px rgba(0,0,0,0.1); border-radius: 8px; background: #fff;">
  <%= form_with model: @order do |form| %>
    <h3 class="mb-4 text-center">Place Order</h3>
    <div class="mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, value: current_user.email, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :shipping_address, "Shipping Address", class: "form-label" %>
      <%= form.text_field :shipping_address, class: "form-control", required: true %>
    </div>
    <div class="d-grid">
      <%= form.submit "Purchase", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
