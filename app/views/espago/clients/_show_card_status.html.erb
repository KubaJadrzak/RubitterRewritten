<div class="card-footer bg-light">
  <% case @client.status %>
  <% when 'CIT' %>
    <div class="alert alert-warning mb-0" role="alert">
      This card is verified and can be used for manual payments,
      however at the current moment this card is not eligible for Auto-Renew functionality.
      In order to verify your card eligibility, please press Verify.
    </div>
  <% when 'MIT' %>
    <div class="alert alert-success mb-0" role="alert">
      This card is fully verified and eligible for Auto-Renew payments.
    </div>
  <% else %>
    <div class="alert alert-secondary mb-0" role="alert">
      This card has an unknown status. Please reach out to support for assistance.
    </div>
  <% end %>
</div>