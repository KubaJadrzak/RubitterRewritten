<div class="row mt-4">
  <div class="col-lg-12 mb-4">
    <div class="card shadow-sm border-light">
      <div class="card-body">
        <h5 class="card-title mb-3">Espago Client Details</h5>
        <div class="row mb-3">
          <div class="col-md-6">
            <p class="d-flex justify-content-between">
              <strong>Name:</strong>
              <span><%= [@client.first_name, @client.last_name].compact.join(" ").presence || "N/A" %></span>
            </p>
          </div>
          <div class="col-md-6">
            <%= render 'show_card_badges' %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <p class="d-flex justify-content-between">
              <strong>Company:</strong>
              <span><%= @client.company.presence || "N/A" %></span>
            </p>
          </div>
          <div class="col-md-6">
            <p class="d-flex justify-content-between">
              <strong>Created At:</strong>
              <span><%= @client.created_at.strftime("%B %d, %Y") %></span>
            </p>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <p class="d-flex justify-content-between">
              <strong>Card Last 4:</strong>
              <span><%= @client.last4.presence || "N/A" %></span>
            </p>
          </div>
          <div class="col-md-6">
            <%= render 'show_card_primary' %>
          </div>
        </div>
      </div>
      <%= render 'show_card_status' %>
    </div>
  </div>
</div>
