<%= turbo_frame_tag "new_rubit_form" do %>
  <%= form_with(model: Rubit.new, class: "d-flex align-items-center gap-2") do |form| %>
    <%= form.text_area :content,
                     rows: 1,
                     class: "form-control flex-grow-1",
                     placeholder: parent_rubit.present? ? "Comment" : "What's on your mind?",
                     required: true %>
    <% if parent_rubit.present? %>
      <%= form.hidden_field :parent_rubit_id, value: parent_rubit.id %>
    <% end %>
    <%= form.button type: "submit", class: "btn btn-comment" do %>
      <i class="bi bi-check2"></i>
    <% end %>
  <% end %>
<% end %>
