<div class="container mt-4">
  <h1>Your Cart</h1>
  <% if @cart.cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "cart_item", collection: @cart.cart_items %>
      </tbody>
    </table>
    <%= render 'carts/total_price', price: @cart.total_price  %>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
