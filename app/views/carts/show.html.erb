<div class="container mt-4">
  <h3>Your Cart</h3>
  <% if @cart.cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "cart_item", collection: @cart.cart_items %>
      </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <%= render 'carts/total_price', price: @cart.total_price  %>
      <%= link_to new_order_path, class: "btn btn-primary btn-lg" do %>
        Place Order
      <% end %>
    </div>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
