<%= turbo_stream_from @subscription %>
<div class="container mt-4">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
    <h3><%= @subscription.subscription_number %></h3>
    <div class="d-flex align-items-center">
      <%= link_to "Back to Subscriptions", account_path(anchor: 'subscriptions'), class: "btn btn-primary me-2" %>
      <% if @subscription.can_extend_subscription? %>
        <%= form_with url: extend_subscription_subscription_path(@subscription), method: :post, html: {
          id: "extend_subscription_form",
          data: {
            controller: "espago-iframe",
            "espago-iframe-target": "form",
            "payment-method-target": "form"
          }
        } do |form| %>
          <%= form.submit "Extend Subscription", class: "btn btn-warning me-2 d-none", id: "extend_subscription_btn", data: {
            turbo: false,
            "espago-iframe-target": "processBtn",
            "payment-method-target": "processBtn"
          } %>
        <% end %>
        <a id="extend_pay_btn" data-payment-method-target="payBtn" class="btn btn-success me-2">Extend Subscription</a>
      <% end %>
      <% if @subscription.can_retry_payment? %>
        <%= form_with url: retry_payment_subscription_path(@subscription), method: :post, html: {
          id: "retry_payment_form",
          data: {
            controller: "espago-iframe",
            "espago-iframe-target": "form",
            "payment-method-target": "form"
          }
        } do |form| %>
          <%= form.submit "Retry Payment", class: "btn btn-success me-2 d-none", id: "retry_payment_btn", data: {
            turbo: false,
            "espago-iframe-target": "processBtn",
            "payment-method-target": "processBtn"
          } %>
        <% end %>
        <a id="retry_pay_btn" data-payment-method-target="payBtn" class="btn btn-success me-2">Retry Payment</a>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-12 mb-4">
      <div class="card shadow-sm border-light">
        <div class="card-body">
          <h5 class="card-title mb-3">Subscription Details</h5>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <%= render "subscription_statuses", subscription: @subscription %>
          </div>
          <div class="row">
            <div class="col-md-6">
              <p class="d-flex justify-content-between">
                <strong>Auto Renew:</strong>
                <span><%= @subscription.auto_renew ? "Yes" : "No" %></span>
              </p>
              <p class="d-flex justify-content-between">
                <strong>Price:</strong>
                <span><%= number_to_currency(@subscription.price) %></span>
              </p>
            </div>
            <div class="col-md-6">
              <p class="d-flex justify-content-between">
                <strong>Start Date:</strong>
                <span><%= @subscription.start_date&.strftime("%B %d, %Y") %></span>
              </p>
              <p class="d-flex justify-content-between">
                <strong>End Date:</strong>
                <span><%= @subscription.end_date&.strftime("%B %d, %Y") %></span>
              </p>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
          <small>Created on <%= @subscription.created_at.strftime("%B %d, %Y at %I:%M %p") %></small>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'payments/payment', locals: { payments: @payments } %>
<script src="https://js.espago.com/espago-1.3.js"></script>
<script
  async
  data-id="EspagoFrameScript"
  data-key="<%= @espago_public_key %>"
  data-live="false"
  data-button="Pay"
  data-success="espagoCallback"
  src="https://js.espago.com/iframe.js"></script>
<script>
  document.addEventListener("turbo:load", function() {
    document.querySelectorAll("[data-payment-method-target='payBtn']").forEach(function(btn) {
      btn.addEventListener("click", function(event) {
        event.preventDefault();
        if (typeof showEspagoFrame === "function") {
          showEspagoFrame();
        } else {
          alert("Payment system not ready. Please wait and try again.");
        }
      });
    });
  });
</script>