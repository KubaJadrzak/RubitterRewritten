<div class="row mt-4">
  <div class="col-lg-12">
    <div class="card shadow-sm border-light">
      <div class="card-body">
        <h5 class="card-title mb-3">Charges</h5>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Charge Number</th>
              <th>Amount</th>
              <th>State</th>
              <th>Reject Reason</th>
              <th>Behaviour</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% charges.each do |charge| %>
              <% css_class = color_for_charge_status(charge.state) %>
              <tr>
                <td class="<%= "#{css_class} text-white" %>"><%= charge.charge_number %></td>
                <td class="<%= "#{css_class} text-white" %>"><%= number_to_currency(charge.amount) %></td>
                <td class="<%= "#{css_class} text-white" %>"><%= charge.state.humanize %></td>
                <td class="<%= "#{css_class} text-white" %>"><%= charge.reject_reason.presence || "N/A" %></td>
                <td class="<%= "#{css_class} text-white" %>"><%= charge.behaviour.presence || "N/A" %></td>
                <td class="<%= "#{css_class} text-white" %>"><%= charge.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>